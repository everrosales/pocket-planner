{{> header currentUser}}
<!-- DEPRECATED: Use login-modal instead -->
<div id="signin">
  <h1>Sign in</h1>
  <div class="error">
    {{#if error}}
        {{error}}
    {{/if}}
  </div>
  <form id="signin-form">
    <div>Username: <input type="text" name="username" required /></div>
    <div>Password: <input type="password" name="password" required /></div>
    <input type="submit" />
  </form>
</div>
