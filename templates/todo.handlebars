
{{#each todos}}
  <div class="todo" todoId={{_id}}>
    <i class="material-icons right delete-todo">clear</i>
    <p>
      <input class="check-todo" type="checkbox" {{#equal status 1}} checked="true"{{/equal}} todoId={{_id}} id="todo-name-{{_id}}" />
      <label for="todo-name-{{_id}}">{{name}}</label>
    </p>
    <!--<div class="checkbox-container">
      <input type="checkbox" {{#equal status 1}} checked="true"{{/equal}} class="check-todo" todoId={{_id}}>
    </div>-->
      <!--<p>{{name}}<span class="glyphicon glyphicon-remove delete-todo"></span></p>-->
      {{#if deadline}}
      <small>Deadline: {{deadline}}</small>
      {{/if}}
      {{#if priority}}
      <br><small>Priority: {{priority}}</small>
      {{/if}}
  </div>
{{/each}}
<button class="waves-effect waves-light btn btn-default add_todo">Add a To-Do</button>

