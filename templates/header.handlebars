<div id="header">
    <p> Pocket Planner</p>
    <button id="home-link">Home</button>
    <p id="title">{{title}}</p>
    {{#if currentUser}}
        <button class="currentUser" id="logout-link">Log out</button>
        <p class="currentUser">Welcome, {{currentUser}}</p>
    {{else}}
        <button class="currentUser" id="signin-btn">Sign in</button>
        <button class="currentUser" id="register-btn">Register</button>
    {{/if}}
    <div class="error"></div>
</div>
