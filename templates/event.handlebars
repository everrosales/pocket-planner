<!-- store event ID info in the event-container -->
<div class="col m3 s12">
  <div class="card event-container" eventId={{_id}}>
    <div class="card-content event">
      {{#if is_mine}}<i class="material-icons right delete-event">clear</i>{{/if}}
      <p><span class="card-title">{{name}}</span></p>
      <hr>
      <p class="host-email">Host: {{hostEmail}}</p>
      <p>Start: {{start}} @ {{start_time}}</p>
      <p>End: {{end}} @ {{end_time}}</p>
      <p class="event_loc">Location: {{#if location}}{{location}}{{else}}TBD{{/if}}</p>

      {{#if description}}
        <p class="event_desc">{{description}}</p>
      {{/if}}
    </div>
  </div>
</div>
